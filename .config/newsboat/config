# bindings
unbind-key -a
bind-key ENTER open
bind-key q     quit
bind-key r     reload
bind-key R     reload-all
bind-key A     mark-feed-read
bind-key l     next
bind-key RIGHT next
bind-key h     prev
bind-key LEFT  prev
bind-key o     open-in-browser
bind-key ?     help
bind-key u     show-urls
bind-key /     open-search
bind-key :     cmdline
bind-key 1     cmd-one
bind-key 2     cmd-two
bind-key 3     cmd-three
bind-key 4     cmd-four
bind-key 5     cmd-five
bind-key 6     cmd-six
bind-key 7     cmd-seven
bind-key 8     cmd-eight
bind-key 9     cmd-nine
bind-key k     up
bind-key UP    up
bind-key j     down
bind-key DOWN  down
bind-key m     macro-prefix

