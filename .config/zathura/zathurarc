### Settings from original zathurarc ###
set adjust-open             'best-fit'
set page-padding            '1'
set render-loading          'false'
set sandbox                 'none'
set selection-clipboard     'clipboard'
set smooth-scroll           'true'
set statusbar-home-tilde    'true'
set window-title-home-tilde 'true'

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#b3babc'
set completion-bg '#16130f'

# Command line completion group elements
set completion-group-fg '#96652B'
set completion-group-bg '#16130f'

# Current command line completion element
set completion-highlight-fg '#16130f'
set completion-highlight-bg '#b3babc'

# Default foreground/background color
set default-bg rgba(22,19,15,0.95)

# Input bar
set inputbar-fg '#b3babc'
set inputbar-bg '#16130f'

# Notification
set notification-fg '#b3babc'
set notification-bg '#16130f'

# Error notification
set notification-error-fg '#b3babc'
set notification-error-bg '#6A614F'

# Warning notification
set notification-warning-fg '#b3babc'
set notification-warning-bg '#6A614F'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#b3babc'
set statusbar-bg '#16130f'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#96652B'
set highlight-active-color '#96652B'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#b3babc'

# 'Loading...' text
set render-loading-fg '#b3babc'
set render-loading-bg '#16130f'

# Index mode
set index-fg '#b3babc'
set index-bg '#16130f'

# Selected element in index mode
set index-active-fg '#16130f'
set index-active-bg '#b3babc'